<h1>閲覧</h1>
<br>

<p>
  <strong>物件名:</strong>
  <%= @rental_property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @rental_property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @rental_property.street_address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @rental_property.house_age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @rental_property.remarks %>
</p>

<hr/>
<% @rental_property.desired_conditions.each do |desired_condition| %>
<h3>最寄り駅</h3>

<p>
  <strong>路線名:</strong>
  <%= desired_condition.roote_name %>
</p>

<p>
  <strong>駅名:</strong>
 <%= desired_condition.station_name %>
</p>

<p>
  <strong>徒歩分数:</strong>分
 <%= desired_condition.walking_minutes %>
</p>

<% end %>

